
.container-view{
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}
.banner-view{
  height: 400rpx;
  width: 100%;
}
.item-view{
  height: 160rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
  padding-right: 100rpx;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  background-color: white;
}
.content-view{
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: flex-start;
  padding-right: 44rpx;
}
.name{
   font-size: 28rpx;
   text-align: left;
}
.content{
   font-size: 22rpx;
   text-align: start;
   display: -webkit-box;
word-break: break-all;
text-overflow: ellipsis;
overflow: hidden;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
}
.enter-view{
  display: flex;
  flex-wrap: wrap;
  
}
.enter-item-view{
  width: 355rpx;
  height: 180rpx;
  background-color: rgb(168, 134, 168);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 10rpx;
  border-radius: 10rpx;


}
