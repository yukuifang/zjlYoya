.container{
  /* background-color: red; */
  width: 100%;
  height: 100%;
  background-color: rgb(246, 246, 246);
  overflow-x: hidden;
  
}
.item-view{
  width: 100%;
  display: flex;
  align-items: center;
  padding-left: 44rpx;
  margin-bottom: 22rpx;
  
}
.name-view{
  font-size: 30rpx;
  color: black;

}
.avatar-view{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  background-color: rgb(246, 246, 246);

}
.time-view{
  font-size: 28rpx;
  color: gray;
  margin-right: 20rpx;
  width: 65rpx;


}
.right-view{
  display: flex;
  align-items: center;
  background-color: white;
  flex: 1;
  position: relative;

}
.tianjia{
  font-size: 60rpx;
  right: 44rpx;
  bottom: 100rpx;
  position: fixed;
  color:rgb(180, 149, 103);
}

.schedule-view{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.no-schedule-view{
   font-size: 28rpx;
   color:rgb(189, 189, 236);
   text-align: center;
   display: flex;
   align-items: center;

}
.delete-view{
  position: absolute;
  font-size: 50rpx;
  right: 44rpx;
  color: rgb(230, 196, 134);
}
.copy-view{
  position:absolute;
  bottom: 44rpx;
  width: 200rpx;
  height: 80rpx;
  color: white;
  font-size: 24rpx;
  text-align: center;
  line-height: 80rpx;
  left: 50%; 
  border-radius: 10rpx;
  transform: translate(-50%, -50%);
  background-color: rgb(247, 186, 73);


}
.no-schedule-view text:nth-of-type(2){
  margin:20rpx
}