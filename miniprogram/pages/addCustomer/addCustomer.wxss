.container{
  width: 100%;
  height: 100%;
  
}
.avater{
  width: 100rpx;
  height: 100rpx;
}
.message-view{
   width: 100%;
}
.item-view{
   display: flex;
   flex-direction: row;
   margin: 30rpx;
   height: 70rpx;
   border-bottom:1px dashed rgb(180, 149, 103);
}
.item-name{
  color: orange;
  font-size: 40rpx;
  padding-right: 20rpx;
}
.item-input{
  flex: 1;
}
.radio-group{
  flex: 1;
}
.submit-view{
   margin-top: 50rpx;
   color: white;
   background-color: rgb(219, 183, 115);
}

.item-content-view{
   display: flex;
   flex-direction: column;
   justify-content: space-between;
   margin: 30rpx;
   height: 200rpx;
   border-bottom:1px dashed rgb(180, 149, 103); 
}
.content{
  margin-top: 20rpx;
}
.head-view{
  flex: 1;
  color: gray;
}
.avatar-image{
   width: 80rpx;
   height: 80rpx;
   border-radius: 40rpx;
}