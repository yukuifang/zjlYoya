.container{
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  background-color: rgb(246,248,251);

  box-sizing: border-box;
}
.item-view{
  display: flex;
  width: 100%;
  align-items: center;
  margin-left:  80rpx;
  padding: 30rpx;
  border-bottom: 1px dashed orange;
  

}
.left-image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgb(248, 191, 85);
  margin-right: 30rpx;
}
.text-view{
  color: gray;
  font-size: 30rpx;

}
.placehold-view{
  flex: 1;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: rgb(189, 189, 236);
  

}
.no-course-imgae{
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 60rpx;
}
.plan-view{
  position: relative;
  width: 100%;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: black;
  padding: 30rpx;
  background-color:white;
  border-bottom: 1rpx dashed gray;
  box-sizing: border-box; 
  margin-bottom: 20rpx;

  
  
}
.gostudy-view{
   position: absolute;
   right: 44rpx;
   width: 80rpx;
   height: 80rpx;
   top: 44rpx;

   
}

.plan-item-view{
   width: 100%;
   padding: 4rpx;
   
}

.plan-item-view text:nth-of-type(1){
   margin-right: 30rpx;
   color: black;
}
.plan-item-view text:nth-of-type(2){
  color: gray;
  font-size: 28rpx;
}

.item-imgae-view{
  color: rgb(182, 40, 120);
  margin-right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  font-size: 50rpx;
}