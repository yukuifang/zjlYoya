.container{
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}
.item-view{
  display: flex;
  width: 100%;
  align-items: center;
  /* padding-left: 20rpx; */
  margin-left:  80rpx;
  padding: 30rpx;
  border-bottom: 1px dashed orange;
}
.left-image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgb(248, 191, 85);
  margin-right: 30rpx;
}
.text-view{
  color: gray;
  font-size: 30rpx;

}
.placehold-view{
  flex: 1;
  display:flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: rgb(189, 189, 236);

}
.plan-view{
  
  font-size: 38rpx;
  color: orange;
  margin: 30rpx;
  /* background-color: slateblue; */
  
}

.plan-item-view{
   width: 100%;
   padding: 10rpx;
   
}

.plan-item-view text:nth-of-type(1){
   width: 100rpx;
}

.item-imgae-view{
  color: rgb(182, 40, 120);
  margin-right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  font-size: 50rpx;
}