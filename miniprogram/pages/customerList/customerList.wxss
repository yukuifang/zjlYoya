
.container-view{
  width: 100%;
  height: 100%;

}
.item-view{
  height: 160rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
  padding-right: 100rpx;
  position: relative;
}
.dotline-view{
  position: absolute;
  right: 20rpx;
  bottom: 1rpx;
  height: 1px;
  left: 120rpx;
  background-color: rgba(0, 0, 0, 0.055)
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  background-color: white;
}
.content-view{
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: flex-start;
  padding-right: 44rpx;
  position: relative;
}
.name{
   font-size: 28rpx;
   text-align: left;
}
.content{
   font-size: 22rpx;
   text-align: start;
   display: -webkit-box;
word-break: break-all;
text-overflow: ellipsis;
overflow: hidden;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
}
.enter-view{
  display: flex;
  
}
.enter-item-view{
  width: 50%;
  height: 180rpx;
  background-color: rgb(168, 134, 168);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 10rpx;


}
.enter-item-leftview{
   display: flex;
   flex-direction: column;
   margin-right: 40rpx;
   color: white;
}



.enter-text1{
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.enter-text2{
  font-size: 22rpx;
}
.enter-item-rightview{
  font-size: 80rpx;
  color:white;
}

